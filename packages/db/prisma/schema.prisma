generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  config Config[]
  services Services[]
}

model Config{
  id String @id @default(uuid())
  version String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  services Services[]
  userId String
  user User @relation(fields: [userId],references: [id])

  @@unique([version,userId])

}
model Services{
  id String @id @default(uuid())
  name String @unique
  image String 
  desired_state Int 
  current_state Int @default(0)
  env Json
  ports Json
  volumes Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  configId String
  config Config @relation(fields: [configId],references: [id])
  userId String
  user User @relation(fields: [userId],references: [id])

  @@unique([name,configId])
  }

