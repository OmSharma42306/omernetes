{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@repo/common": ["packages/common/src"],// <-- TS uses this for type resolution
      "@repo/db" : ["packages/db/src"],
      "@repo/kafka-service" : ["packages/kafka-service/src"],
    },
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "strict": true,
    "composite": true
  }
}
