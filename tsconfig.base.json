    "baseUrl": ".",
    "paths": {
      "@repo/common": ["packages/common/src"]  // <-- TS uses this for type resolution
    },
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "strict": true,
    "composite": true
  }
}
